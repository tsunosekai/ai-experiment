---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} | AI Research</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body>
  <nav class="nav">
    <a href="/" class:list={[{ active: currentPath === '/' }]}>Home</a>
    <a href="/logs" class:list={[{ active: currentPath.startsWith('/logs') }]}>Logs</a>
    <a href="/notes" class:list={[{ active: currentPath.startsWith('/notes') }]}>Notes</a>
    <a href="/ideas" class:list={[{ active: currentPath.startsWith('/ideas') }]}>Ideas</a>
  </nav>
  <slot />
</body>
</html>
